  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:coverage": "craco test --coverage --watchAll=false",
    "test:ci": "craco test --coverage --watchAll=false --passWithNoTests",
    "test:performance": "node scripts/performance-tests.js",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:lighthouse": "node scripts/lighthouse-tests.js",
    "search:fetch": "node scripts/fetch-entries-to-file.js --api %REACT_APP_API_BASE% --out docs/entries.json",
    "search:bootstrap": "node scripts/gold-bootstrap.js --entries docs/entries.json --gold docs/search_gold_sample.json --top 3 --out docs/search_gold_bootstrapped.json",
    "search:eval": "node scripts/search-eval.js --entries docs/entries.json --gold docs/search_gold_bootstrapped.json --limit 20",
    "test:all": "npm run test:ci && npm run test:performance && npm run test:e2e && npm run test:lighthouse",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@tailwindcss/postcss": "4.1.12",
